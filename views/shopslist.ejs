<!DOCTYPE HTML>
<html>
	<head>
		<title>सब local</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="assets/css/main.css" />
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
        <link rel="stylesheet" href="https://bootswatch.com/4/journal/bootstrap.min.css"/>
	</head>
	<body>

		<!-- Header -->
		<header id="header">
			<div class="inner">
				<a href="./" class="logo">सब local</a>
				<nav id="nav">
					<a href="/#about">About</a>
					<a href="/#addshop">Add Shop</a>
					<a href="/#shopnow">Shop Now</a>
					<a href="/#donate">Donate</a>
					<a href="./filterarea#contactus">Contact Us</a>
					<% if (typeof user != 'undefined' ) { %>
						<button class="button special">
							<% if (user.addShop) { %>
								<a href="/myshop">My Shop</a>
							<% } else { %>
								<a href="/"><%= user.name %></a>
							<% } %>
						</button>
						<button class="button special"><a href="/logout">Logout</a></button>
					<% }else{ %>
						<button class="button special"><a href="./formlogin">Login</a></button>
						<button class="button special"><a href="./formregister">Register</a></button>
					<% } %>
				</nav>
			</div>
		</header>
		<a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>
        
		<section>
            <div class="site-section">
                <div class="container">
                    <div class="row mb-5 justify-content-center">
                        <div class="col-md-6 text-center">
                            <br><br>
                            <h3 class="section-sub-title">Shops in your area</h3>
                            <p><b>Enjoy Shopping from the shops in your locality.</b></p>
                        </div>
                    </div>
                    <div class="row">
                        <% for (var i = 0; i < data.length; i++) { %>
                            <div class="col-lg-4 col-md-6 mb-5" style="text-align: center;">
                                <div class="product-item">
                                    <figure>
			    					    <% if (data[i].shoptype == 'Automotive'){%>
				    					    <img src="assets/img/Automotive.jpg" alt="Image" class="img-fluid center" >
					    			    <% } else if (data[i].shoptype == 'Baby & Toddler'){ %>
											<img src="assets/img/Baby&Toddler.jpg" alt="Image" class="img-fluid center" >
										<% } else if (data[i].shoptype == 'Bakery & Sweets'){ %>
											<img src="assets/img/Bakery.jpg" alt="Image" class="img-fluid center" >
							    	    <% } else if (data[i].shoptype == 'Clothing & Stores'){ %>
								    	    <img src="assets/img/Clothing&Stores.jpg" alt="Image" class="img-fluid center" >
								        <% } else if (data[i].shoptype == 'Computers & Software'){ %>
									        <img src="assets/img/Computers.jpg" alt="Image" class="img-fluid center" >
    								    <% } else if (data[i].shoptype == 'Electronics & Electicals'){ %>
	    								    <img src="assets/img/Electronics.jpg" alt="Image" class="img-fluid center" >
		    						    <% } else if (data[i].shoptype == 'Foods & Gifts'){ %>
											<img src="assets/img/Foods&Gifts.jpg" alt="Image" class="img-fluid center" >
										<% } else if (data[i].shoptype == 'Fruits,Vegetables & Juices'){ %>
											<img src="assets/img/Fruits.jpg" alt="Image" class="img-fluid center" >
				    				    <% } else if (data[i].shoptype == 'General Store'){ %>
					    				    <img src="assets/img/GeneralStore.jpg" alt="Image" class="img-fluid center" >
						    		    <% } else if (data[i].shoptype == 'Health & Beauty'){ %>
							    		    <img src="assets/img/Health&Beauty.jpg" alt="Image" class="img-fluid center" >
								        <% } else if (data[i].shoptype == 'Home & Garden'){ %>
									        <img src="assets/img/Home&Garden.jpg" alt="Image" class="img-fluid center" >
    								    <% } else if (data[i].shoptype == 'Office & Professional Services'){ %>
	    								    <img src="assets/img/Office&ProfessionalServices.jpg" alt="Image" class="img-fluid center" >
		    						    <% } else if (data[i].shoptype == 'Personal & Home Services'){ %>
			    						    <img src="assets/img/Personal&HomeServices.jpg" alt="Image" class="img-fluid center" >
				    				    <% } else if (data[i].shoptype == 'Restaurants & Dining'){ %>
					    				    <img src="assets/img/Restaurants&Dining.jpg" alt="Image" class="img-fluid center" >
						    		    <% } else if (data[i].shoptype == 'Sports & Outdoors'){ %>
	    							    	<img src="assets/img/Sports&Outdoors.jpg" alt="Image" class="img-fluid center" >
										<% } else if (data[i].shoptype == 'Stationary'){ %>
											<img src="assets/img/Stationary.jpg" alt="Image" class="img-fluid center" >
										<% } else if (data[i].shoptype == 'Travel'){ %>
	    		    						<img src="assets/img/Travel.jpg" alt="Image" class="img-fluid center" >
		    		    				<% } else { %>
			    		    				<img src="assets/img/Other.jpg" alt="Image" class="img-fluid center" >
                                        <% } %>
                                    </figure>

						    		<form  action="/filtershop" method="post">
							    		<div class="px-4">
								    		<input type="hidden" name="shopname" value="<%=data[i].shopname%>">
	                                        <h3><%= data[i].shopname %></h3>
	                                        <div class="mb-3">
	                                            <span><a href="#" class="mr-2"></a><b>Current Customer Count</b>: <%=data[i].items.length%></span>
    	                                        <br>
	                                            <span><a href="#" class="mr-2"></a><b>Next customer's Expected time</b>: <%=data[i].items.length*7%> minutes from now</span>
	                                        </div>
			    							<input type="hidden" name="pincode" value="<%=data[i].pincode%>">
				    						<input type="hidden" name="area" value="<%=data[i].area%>">
	                                        <div class="3u 6u(small) 12u$(xsmall)">
		    			    	    			<input class="button special" type="submit" name="click" value="Visit Shop">
             	                            </div>
	                                    </div>
    								</form>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>


		<!-- contactus -->
		<section id="contactus" style="background-color:#4a5050">
			<div class="inner" >
				<header>
				<h2 style="color:#e5474b">CONTACT US<br><br></h2>
				</header>
				<div class="copyright" style="color:#e5474b">
                    &copy; 2020  <a href ="https://mail.google.com/mail/u/0/?view=cm&fs=1&to=prefixsuffix.projects@gmail.com&su=SUBJECT&body=BODY&tf=1"><span class="icon fa-envelope-o "></span> prefix_suffix</a>  
                    <br> Developers: <a href="https://www.linkedin.com/in/roopam-mishra-713583189/"><span class="icon fa-linkedin"></span> Roopam Mishra</a>.
                </div>
			</div>
		</section>

		<!-- Scripts -->
		<script src="assets/js/jquery.min.js"></script>
		<script src="assets/js/skel.min.js"></script>
		<script src="assets/js/main.js"></script>
		<script src="assets/js/util.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
	</body>
</html>
